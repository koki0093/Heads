<div class="user_edit_body">
  <div class ="user_edit_wrapper">
    <div class = "user_edit_container">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <h1>User.edit</h1>
        <label>
        <div class="icon_container">
          <div class="post_preview7" id="POST_PREVIEW7"><i class="fas fa-camera fa-3x user_post_item"></i>
            <% if @user.image.present? %>
              <%= image_tag @user.image_url,class: "user_image edit_image",id:"icon_preview", size: "200x200" if @user.image? %></br>
            <% else %>
              <%= image_tag '/icon.jpg',class: "user_image edit_image",id:"icon_preview", size: "200x200" %></br>
            <% end %>
          </div>
          <%= f.file_field :image , class: 'new_text img_post', id:"post_pre" %>
          <span class="post_edit"></span>
          </div>
        </label>
        
        <%= f.text_field :name, placeholder:"name", autofocus: true, autocomplete: "name" %>
        <%= f.email_field :email, placeholder:"email", autofocus: true, autocomplete: "email" %>
        <%= f.text_area :profile, placeholder:"profile 40文字まで", autofocus: true %>
        <%= f.password_field :password, placeholder:"password", autocomplete: "new-password" %>
        <p>passwordを変更しない場合は、空のままでOK!</p>
        <%= f.password_field :password_confirmation,  placeholder:"新しいpassword",autocomplete: "新しいパスワード" %>
        <%= f.password_field :current_password, placeholder:"現在のpassword", autocomplete: "new-password" %>
        <p>更新するためには現在のパスワードが必要です。</p>
        <% if devise_mapping.rememberable? -%>
            <%= f.check_box :remember_me -%>
        <% end %>
        <%= f.submit "Update" %>
        <div class = "yanayatu_item3">
          <%= link_to "マイページに戻る", :back, data: {"turbolinks" => false} %>
        </div>
      <% end %>
    </div>
  </div>
</div>
